<!DOCTYPE html>
<html>
<head>
  <title>Treebook</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="navbar-header">
  	<div class="container">
    <a class="navbar-brand" href="#">Treebook</a>
    <ul class="nav nav-tabs">
  <li><%= link_to "All Statuses", statuses_path %></li>

  <% if user_signed_in? %>
      <li class="nav pull-right"><%= link_to current_user, edit_user_registration_path %></li>
      <li class="nav pull-right"><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
      <% else %>
        <li class="nav pull-right"><%= link_to "Register", new_user_registration_path %></li>
        <li class="nav pull-right"><%= link_to "Log in", new_user_session_path %></li>

  <% end %>
</ul>


  </div>
  </div>
</nav>

	<div class="container">
     <p class="notice"><%= notice %></p>
     <p class="alert"><%= alert %></p>

<%= yield %>
</div>

</body>
</html>
